{% extends "base.html.twig" %}

{% block title %}{{ "confirmation"|trans }} - {{ parent() }}{% endblock %}

{% block body %}

	<nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ url("homepage") }}">{{ "homepage"|trans }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ "confirmation"|trans }}</li>
      </ol>
    </nav>

	<div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
      <h1 class="display-5">{{ "confirmation"|trans }}</h1>
      {% for message in app.flashes('success') %}
          	<div class="alert alert-success" role="alert">{{ message|nl2br }}</div>
      {% endfor %}
      {% for message in app.flashes('warning') %}
          	<div class="alert alert-warning" role="alert">{{ message|nl2br }}</div>
      {% endfor %}
    </div>
{% endblock %}

{% block js %}
    <script type="application/javascript">
    </script>
{% endblock %}
